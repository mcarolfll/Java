			v1 = tec.nextInt();
			System.out.println("Digite o valor 2");
			v2 = tec.nextInt();
			
			if (v1 == v2) {
				System.out.println("O valor 1 é igual ao valor 2");
			} else {
				System.out.println("O valor 1  não é igual ao valor 2");
			}
			
			if (v1 > v2) {
				System.out.println("O valor 1 é maior ao valor 2");
			} else {
				System.out.println("O valor 1 é menor ao valor 2");
			}
			if (v1 >= v2) {
				System.out.println("O valor 1 é maior ou igual ao valor 2");
